#!/usr/bin/env python3

import sys

from heppy.Error import Error
from heppy.Client import Client

if len(sys.argv)<2:
    Error.die(1, 'usage: eppyc path')
path = sys.argv[1]

data = ''
for line in sys.stdin:
    data += line

if not data.strip():
    Error.die(2, 'no command given')

try:
    client = Client(path)
    res = client.command(data)
except Exception as e:
    Error.die(3, e)

if res is None:
    Errro.die(4, 'None')
else:
    print(res)

